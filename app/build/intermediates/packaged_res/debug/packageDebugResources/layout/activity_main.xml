<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Original vertical layout moved inside FrameLayout -->
    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top container (e.g., search bar or header) -->
        <FrameLayout
            android:id="@+id/top_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Main content area for fragments -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom navigation -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:gravity="center">

            <Button
                android:id="@+id/btn_movies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/movies_icon"
                android:drawablePadding="20dp"
                android:paddingStart="40dp"
                android:text="Movies"
                android:textColor="#888888"
                android:background="?android:attr/selectableItemBackground"  />

            <Button
                android:id="@+id/btn_favourites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/favourites_icon"
                android:text="Favourites"
                android:textColor="#888888"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>

    <!-- Side Filter Toolbar (initially off screen to the left) -->
    <FrameLayout
        android:id="@+id/filter_toolbar"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#EEEBF3"
        android:translationX="-250dp"
        android:elevation="8dp">

    </FrameLayout>

</FrameLayout>