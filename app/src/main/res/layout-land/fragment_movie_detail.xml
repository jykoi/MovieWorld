<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">


    <!-- Layout for the movie details page changed to horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageView
            android:id="@+id/detailPoster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <!-- Vertical layout for the movie details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/back_icon"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Movie Title"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1994  â€¢  8.8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detailGenreChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="6dp"
                android:text="Genre"
                android:textSize="14sp"
                android:background="#E0E0E0" />

            <CheckBox
                android:id="@+id/detailFavCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:button="@drawable/favourites_icon"
                android:text="  Favourite" />

            <TextView
                android:id="@+id/detailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Description PLACEHOLDER"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detailUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="https://example.com"
                android:textColor="#3F51B5"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
